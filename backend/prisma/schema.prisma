generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int              @id @default(autoincrement())
  utorid                String           @unique
  name                  String
  email                 String           @unique
  password              String?
  birthday              DateTime?
  role                  String           @default("regular")
  points                Int              @default(0)
  suspicious            Boolean          @default(false)
  createdAt             DateTime         @default(now())
  lastLogin             DateTime?
  verified              Boolean          @default(false)
  avatarUrl             String?
  darkMode              Boolean          @default(false)
  resetToken            String?          @unique
  expiresAt             DateTime?
  guest                 EventGuest[]
  organizer             EventOrganizer[]
  transactionsProcessed Transaction[]    @relation("ProcessedBy")
  transactionsReceived  Transaction[]    @relation("Recipient")
  transactionsSent      Transaction[]    @relation("Sender")
  transactionsCreated   Transaction[]    @relation("CreatedBy")
  promotions            Promotion[]      @relation("UserPromotions")
  raffleEntries         RaffleEntry[]    @relation("RaffleEntries")
  raffleWins            Raffle[]         @relation("RaffleWinner")
}

model Promotion {
  id           Int                    @id @default(autoincrement())
  name         String
  description  String
  type         String
  startTime    DateTime
  endTime      DateTime
  minSpending  Float?
  rate         Float?
  points       Int?
  transactions TransactionPromotion[]
  users        User[]                 @relation("UserPromotions")
}

model Event {
  id            Int              @id @default(autoincrement())
  name          String
  description   String
  location      String
  startTime     DateTime
  endTime       DateTime
  capacity      Int?
  pointsRemain  Int              @default(0)
  pointsAwarded Int              @default(0)
  published     Boolean          @default(false)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  guests        EventGuest[]
  organizers    EventOrganizer[]
  transactions  Transaction[]
}

model EventOrganizer {
  id      Int   @id @default(autoincrement())
  userId  Int
  eventId Int
  event   Event @relation(fields: [eventId], references: [id])
  user    User  @relation(fields: [userId], references: [id])

  @@unique([userId, eventId])
}

model EventGuest {
  id      Int   @id @default(autoincrement())
  userId  Int
  eventId Int
  event   Event @relation(fields: [eventId], references: [id])
  user    User  @relation(fields: [userId], references: [id])

  @@unique([userId, eventId])
}

model Transaction {
  id            Int                    @id @default(autoincrement())
  utorid        String
  type          String                 @default("purchase")
  remark        String                 @default("")
  createdById   Int
  suspicious    Boolean                @default(false)
  relatedId     Int?
  amount        Int                    @default(0)
  spent         Int                    @default(0)
  earned        Int                    @default(0)
  senderId      Int?
  recipientId   Int?
  sent          Int?
  processed     Boolean                @default(false)
  processedById Int?
  redeemed      Int?
  awarded       Int?
  eventId       Int?
  event         Event?                 @relation(fields: [eventId], references: [id])
  processedBy   User?                  @relation("ProcessedBy", fields: [processedById], references: [id])
  recipient     User?                  @relation("Recipient", fields: [recipientId], references: [id])
  sender        User?                  @relation("Sender", fields: [senderId], references: [id])
  createdBy     User                   @relation("CreatedBy", fields: [createdById], references: [id])
  promotions    TransactionPromotion[]
}

model TransactionPromotion {
  transactionId Int
  promotionId   Int
  promotion     Promotion   @relation(fields: [promotionId], references: [id])
  transaction   Transaction @relation(fields: [transactionId], references: [id])

  @@id([transactionId, promotionId])
}

model Raffle {
  id          Int           @id @default(autoincrement())
  name        String
  description String
  pointCost   Int
  prizePoints Int           // Points awarded to the winner
  startTime   DateTime
  endTime     DateTime
  drawTime    DateTime
  winnerId    Int?
  drawn       Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  entries     RaffleEntry[]
  winner      User?         @relation("RaffleWinner", fields: [winnerId], references: [id])
}

model RaffleEntry {
  id        Int      @id @default(autoincrement())
  raffleId  Int
  userId    Int
  enteredAt DateTime @default(now())
  raffle    Raffle   @relation(fields: [raffleId], references: [id], onDelete: Cascade)
  user      User     @relation("RaffleEntries", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([raffleId, userId])
  @@index([raffleId])
  @@index([userId])
}
